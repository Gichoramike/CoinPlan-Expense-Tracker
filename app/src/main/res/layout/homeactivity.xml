<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/rectangle_9"
                android:layout_width="414dp"
                android:layout_height="287dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rectangle_1"
                />

            <TextView
                android:id="@+id/hello"
                android:layout_width="130dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="55dp"
                android:textSize="18sp"
                android:fontFamily="@font/inter"
                android:gravity="top"
                android:text="Hello,"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="167dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/inter"
                android:gravity="top"
                android:text="Michael"
                android:textColor="@color/white"
                android:background="@null"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/notification"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/bell1"
                android:text=""

                />


            <View
                android:id="@+id/card"
                android:layout_width="374dp"
                android:layout_height="201dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/card"

                />

            <TextView
                android:id="@+id/total_balan"
                android:layout_width="101dp"
                android:layout_height="19dp"
                android:text="Total Balance"
                android:layout_marginTop="160dp"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/inter"
                android:textColor="@color/white"
                />

            <View
                android:id="@+id/dots"
                android:layout_width="21dp"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="353dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="160dp"
                android:background="@drawable/dots"
                />

            <View
                android:id="@+id/up_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:clipToOutline="true"
                android:layout_marginTop="160dp"
                android:layout_toRightOf="@+id/total_balan"
                android:layout_marginLeft="10dp"
                android:background="@drawable/up_arrow"
                />

            <TextView
                android:id="@+id/balance_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="185dp"
                android:fontFamily="@font/inter"
                android:gravity="top"
                android:text="Ksh 0"
                android:textColor="@color/white"
                android:background="@null"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/income"
                android:layout_width="75dp"
                android:layout_height="19dp"
                android:layout_toRightOf="@+id/income_icon"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="240dp"
                android:text="Income"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:gravity="top"
                />
            <View
                android:id="@+id/income_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="240dp"
                android:background="@drawable/circle_1"
                android:foreground="@drawable/arrow_down1"
                />

            <TextView
                android:id="@+id/expenses"
                android:layout_width="77dp"
                android:layout_height="22dp"
                android:layout_toRightOf="@id/expense_icon"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="240dp"
                android:text="Expenses"
                android:fontFamily="@font/inter"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:gravity="right|top"
                />
            <View
                android:id="@+id/expense_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="205dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="240dp"
                android:background="@drawable/circle_1"
                android:foreground="@drawable/arrow_up1"
                />

            <TextView
                android:id="@+id/income_amount"
                android:layout_width="150dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="270dp"
                android:background="@null"
                android:fontFamily="@font/inter"
                android:gravity="top"
                android:text="Ksh 0"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/expense_amount"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="270dp"
                android:fontFamily="@font/inter"
                android:gravity="left|top"
                android:text="Ksh 0"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/transaction"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="350dp"
                android:fontFamily="@font/inter_medium"
                android:text="Transactions History"
                android:textColor="#222222"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/see_all"
                android:layout_width="55dp"
                android:layout_height="17dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="350dp"
                android:fontFamily="@font/inter"
                android:text="see all"
                android:textColor="#666666"

                />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_below="@+id/transaction"
                />



        </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="680dp"
        android:elevation="6dp">

        <ImageButton
            android:id="@+id/home_action"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/homebtn"
            />
        <TextView
            android:id="@+id/hometext"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:text="Home"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            />



            <ImageButton
                android:id="@+id/button_expense"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="130dp"
                android:background="@drawable/expensebtn"
                />
            <TextView
                android:id="@+id/expensetext"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="115dp"
                android:text="Expense"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="40dp"

                />




            <ImageButton
                android:id="@+id/button_income"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/button_expense"
                android:background="@drawable/incomebtn"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/incometext"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:text="Income"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="200dp"/>

        <ImageButton
            android:id="@+id/button_budget"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/button_income"
            android:background="@drawable/budget1"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/budgettext"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:text="Budget"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="280dp"/>


    </RelativeLayout>

</RelativeLayout>